{
  "version": 2,
  "builds": [
    {
      "src": "*.php",
      "use": "vercel-php@0.6.0"
    },
    {
      "src": "mobile/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/mobile/(.*)",
      "dest": "/mobile/$1"
    },
    {
      "src": "/(.*\\.php)",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.php"
    }
  ],
  "env": {
    "DB_HOST": "localhost",
    "DB_NAME": "electricity",
    "DB_USER": "root",
    "DB_PASS": ""
  }
}